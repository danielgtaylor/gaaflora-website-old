transition()
  -webkit-transition: arguments
  -moz-transition: arguments
  transition: arguments

body
  padding: 30px
  font: 14px 'Raleway', 'Lucida Grande', Helvetica, Arial, sans-serif
  color: #eee;
  background: #222 url(/images/dark_leather.png);
  background-image: -webkit-radial-gradient(rgba(255, 255, 255, 0.1) 70%, rgba(255, 255, 255, 0.025)), url(/images/dark_leather.png);
  background-image: -moz-radial-gradient(rgba(255, 255, 255, 0.1) 70%, rgba(255, 255, 255, 0.025)), url(/images/dark_leather.png);
  background-image: -o-radial-gradient(rgba(255, 255, 255, 0.1) 70%, rgba(255, 255, 255, 0.025)), url(/images/dark_leather.png);
  background-image: -ms-radial-gradient(rgba(255, 255, 255, 0.1) 70%, rgba(255, 255, 255, 0.025)), url(/images/dark_leather.png);
  background-image: radial-gradient(rgba(255, 255, 255, 0.1) 70%, rgba(255, 255, 255, 0.025)), url(/images/dark_leather.png);
  margin: 0px;

a
  color: #00B7FF

nav
  position: relative
  font-family: 'Marck Script', 'Lucida Grande', Helvetica, Arial, sans-serif

  ul
    padding: 0
    margin: 0

    li
      display: inline
      padding: 0
      margin: 0

      a
        color: #eee
        font-size: 18pt
        text-decoration: none
        padding: 0.5em
        margin: 0
        transition all 0.4s

        &:hover
          text-shadow: 0px 0px 5px rgba(255, 255, 255, 0.7)
          transition: all 0.4s

.right
  float: right

.left
  float: left

.clear
  clear: both

.main-container
  width: 820px
  margin-left: auto
  margin-right: auto

.topsep
  height: 10px
  margin-left: auto
  margin-right: auto
  background: -webkit-radial-gradient(center 0, ellipse farthest-side, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0))
  background: -moz-radial-gradient(center 0, ellipse farthest-side, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0))
  background: -o-radial-gradient(center 0, ellipse farthest-side, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0))
  background: -ms-radial-gradient(center 0, ellipse farthest-side, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0))
  border-top: 1px solid rgba(0, 0, 0, 0.05)
  clear: both

.bottomsep
  height: 10px
  margin-left: auto
  margin-right: auto
  background: -webkit-radial-gradient(center 100%, ellipse farthest-side, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0))
  background: -moz-radial-gradient(center 100%, ellipse farthest-side, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0))
  background: -o-radial-gradient(center 100%, ellipse farthest-side, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0))
  background: -ms-radial-gradient(center 100%, ellipse farthest-side, rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0))
  border-bottom: 1px solid rgba(0, 0, 0, 0.05)
  clear: both

.slideshow-frame
  position: relative
  padding: 10px
  background-color: #eee;
  border-radius: 2px
  box-shadow: inset 1px 1px 0px rgba(255, 255, 255, 0.8), inset -1px -1px 0px rgba(0, 0, 0, 0.5), 0px 0px 10px rgba(0, 0, 0, 0.5)

  &.small
    display: inline-block

    &:not(.last)
      margin-right: 40px

  .slideshow-image
    border-radius: 2px
    box-shadow: inset 1px 1px 0px rgba(0, 0, 0, 0.25), inset -1px -1px rgba(255, 255, 255, 0.25)

  .title
    text-align: center
    font-family: "Waiting for the Sunrise"
    font-size: 24pt
    color: black
    margin-bottom: -10px

.spaced
  margin-top: 1em;
  margin-bottom: 1em;

#bio-photo
  display: block
  float: left
  width: 80px
  height: 102px
  background: url(/images/kari-80.jpg)
  border-radius: 4px
  box-shadow: inset 0px 0px 0px 1px rgba(0, 0, 0, 0.3), 1px 1px 2px rgba(0, 0, 0, 0.4)
  margin-top: 3px
  margin-right: 8px
  margin-bottom: 5px

.social
  text-align: center
  font-size: 8pt

  .zocial
    margin: 1.5em 0.5em 0.5em 0.5em

.footer
  padding-top: 1em
  text-align: center
  color: #777

